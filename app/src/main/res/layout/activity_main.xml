<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#082032"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/eT1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#082032"
        android:layout_marginTop="30dp"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="36dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/eT2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#082032"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroup"
        android:columnCount="6"
        android:paddingTop="20dp"
        android:rowCount="7">

        <Button
            android:id="@+id/buttonSin"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:drawable="@drawable/button_background"
            android:padding="10sp"
            android:textAllCaps="false"
            android:text="sin"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/buttonCos"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:drawable="@drawable/button_background"
            android:padding="10sp"
            android:textAllCaps="false"
            android:text="cos"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/buttonTan"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:drawable="@drawable/button_background"
            android:padding="10sp"
            android:textAllCaps="false"
            android:text="tan"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/buttonSquare"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:drawable="@drawable/button_background"
            android:padding="10sp"
            android:textAllCaps="false"
            android:text="eˣ"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/buttonReset"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/blue"
            android:drawable="@drawable/button_background"
            android:padding="10sp"
            android:textAllCaps="false"
            android:text="Ac"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonC"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="C"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonMod"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="%"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck,DuplicateClickableBoundsCheck" />

        <Button
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="7"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="8"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="9"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="X"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button4"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="4"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button5"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="5"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button6"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="6"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="-"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button1"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="1"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button2"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="2"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button3"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="3"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="+"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button0"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="0"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#082032"
            android:padding="10sp"
            android:text="."
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonLog"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonRoot"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E5890A"
            android:padding="10sp"
            android:text="√"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />


        <Button
            android:id="@+id/buttonPI"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:padding="10sp"
            android:text="π"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonLn"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:padding="10sp"
            android:text="ln"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/buttonFact"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:padding="10sp"
            android:text="x!"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_row="6"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#2F86A6"
            android:padding="10sp"
            android:text="="
            android:textAllCaps="false"
            android:textSize="24sp"
            app:cornerRadius="15dp"
            tools:ignore="TextContrastCheck" />


    </GridLayout>

</LinearLayout>